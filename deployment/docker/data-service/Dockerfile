From tomcat:8.0-jre8-alpine as data-service

ADD bin/rest-data-service/ /usr/local/tomcat/webapps/data
ADD conf/dataConfig.json /usr/local/tomcat/webapps/data/WEB-INF/
ENV JAVA_OPTS="-Dpalisade.rest.basePath=data-service -Dpalisade.properties.app.title=rest-data-service -Dpalisade.rest.data.service.config.path=/usr/local/tomcat/webapps/data/WEB-INF/dataConfig.json"
